<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ngo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="NGO Name"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addbox">
                <TextView
                    android:id="@+id/add_title"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ngo_add"
                    android:text="NGO Address"
                    android:textSize="14sp"
                    android:padding="16dp"
                    android:textColor="#A9A9A9"
                    android:layout_toRightOf="@+id/add_title"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aboutbox"
                android:layout_below="@id/addbox">
                <TextView
                    android:id="@+id/con_title"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="About NGO"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ngo_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/con_title"
                    android:padding="16dp"
                    android:text="NGO Content"
                    android:textColor="#A9A9A9"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mobbox"
                android:layout_below="@+id/aboutbox">
                <TextView
                    android:id="@+id/mob_title"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Mobile No."
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ngo_mob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/mob_title"
                    android:padding="16dp"
                    android:text="NGO Mob"
                    android:textColor="#A9A9A9"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:layout_below="@+id/mobbox">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_title"
                    android:text="Email"
                    android:textSize="14sp"
                    android:padding="16dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ngo_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="NGO Email"
                    android:textColor="#A9A9A9"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/email_title"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>